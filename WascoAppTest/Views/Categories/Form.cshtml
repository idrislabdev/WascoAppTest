@using WascoAppTest.ViewModels.Categories;
@model CategoryFormViewModel;

@{
    ViewData["Titles"] = "Add Category";
}

<form asp-action="AddOrUpdate" method="post">
    <input type="text" class="d-none" asp-for="CategoryId" placeholder="CategoryId">
    <div class="row">
        <div class="col-md-6">
            @if (Model.CategoryId == 0)
            {
                <h5>Add a new category</h5>
            } 
            else 
            {
                <h5>Update category</h5>

            }
            <hr />
            <div class="form-group">
                <label asp-for="CategoryName" class="form-label"></label>
                <input type="text" class="form-control" asp-for="CategoryName" placeholder="Category Name">
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="d-flex align-items-center gap-1 mt-3">
                 <a asp-controller="Categories" asp-action="Index" class="btn btn-danger">Cancel</a>
                <button type="submit" class="btn btn-primary">Save</button>
            </div>
        </div>
     </div>
 </form>
 
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}